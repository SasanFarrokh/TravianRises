<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="tab_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <style name="right_btn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:alpha">0.93</item>
    </style>
    <style name="setting_btn">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="progress_bar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/progressbar_draw</item>
    </style>
    <style name="hero_progressbar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/progressbar_draw</item>
    </style>
    <style name="btn_circle">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>
    <style name="building_circle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textOff"> </item>
        <item name="android:textOn"> </item>
        <item name="android:background">@drawable/building_circle</item>
    </style>
</resources>
